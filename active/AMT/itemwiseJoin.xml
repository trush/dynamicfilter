<HTMLQuestion xmlns="http://mechanicalturk.amazonaws.com/AWSMechanicalTurkDataSchemas/2011-11-11/HTMLQuestion.xsd">
<HTMLContent><![CDATA[
<!-- YOUR HTML BEGINS -->
<!DOCTYPE html>
<html>
<link href="https://s3.amazonaws.com/mturk-public/bs30/css/bootstrap.min.css" rel="stylesheet" />

<script type="text/javascript">

    var questionAnswered = false; // boolean to track whether or not question has been answered
    var start_ms; // start time
    var end_ms; // end time

    // called when answer chosen is Yes or No
    function clickedYesOrNo() {
        questionAnswered = true; // user chooses Yes or No, question becomes answered
    }

    // establishes time of when user began to answer question
    function startTime() {
        start = new Date();
        start_ms = start.getTime();
    }
    
    function toggleSubmit() {
      var x = document.getElementById("submitButton");
      var y = document.getElementById("consentRequest");
      if (x.style.display === "block") {
        x.style.display = "none";
        y.style.display = "block";
      } else {
        x.style.display = "block";
        y.style.display = "none";
      }
    }

    // establishes time of when user finished answering question
    function endTime() {
        end = new Date();
        end_ms = end.getTime();
        var elem = document.getElementById("elapsed_time");
        elem.value = end_ms-start_ms; // total time taken to answer question
    }

</script>

<head>
<meta http-equiv='Content-Type' content='text/html; charset=UTF-8'/>
<script type='text/javascript' src='https://s3.amazonaws.com/mturk-public/externalHIT_v1.js'></script>
<style>
    body.padding{
        padding-left:0.5cm;
    }
    #submitButton {display: none;}
</style>
</head>

<!-- once site loads, calls startTime() and getGoogleLink() -->
<body class="padding" onload='startTime()'> 

    <form name='mturk_form' method='post' id='mturk_form' action='https://www.mturk.com/mturk/externalSubmit'><input type='hidden' value='' name='assignmentId' id='assignmentId'/>

        <section class="container" id="Other" style="padding: 0px 0px 0px 0px; font-family: Verdana, Geneva, sans-serif; color:#333333; font-size:0.9em;">&nbsp;</section>

        <!-- sets up consent form and checkbox to give consent -->
        <div class="row col-xs-12 col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading"><strong>Consent Notification</strong></div>

                <div class="panel-body">This task is part of a research project 
                    aimed at figuring out how easy or difficult questions are 
                    about various items. The goal is to learn which questions 
                    are easier in order to adjust the order in which questions 
                    are asked. You must give consent in order to submit this HIT. If you do not want to participate, please return the HIT.<br>    
                    
                <input id="consent" name="consent" type="checkbox" onclick="toggleSubmit()"/>
                <label for="consent">I agree to participate in this study</label>
                </div>
            </div>
        </div>

        <div class="row col-xs-12 col-md-12">

            <!-- Instructions -->
            <div class="panel panel-primary">
                <div class="panel-heading"><strong>Instructions</strong></div>

                <div class="panel-body">
                    <ol>
                        <li>You will be provided with an item.</li>
                        <li>You will be asked to find other items based on some criterion.</li>
                        <li>Please separate items with new lines, and produce as many items as you can.</li>
                        <li>If you find no items that fit the criterion, leave the field blank.</li>
                        <li>As long as you try to find the information, your answer will not affect your reward.</li>
                        <li>You may provide feedback on the clarity of the instructions, the 
                            presentation, the difficulty of the task, or anything else.</li>
                    </ol>
                </div>
            </div>
            <!-- End Instructions -->

            <!-- Content Body -->
            <section>

                <p><label>Item: XXX(ITEM_NAME_HERE)XXX</label></p>

                <table>
                    <p><label>Find every restaurant within 0.4 miles of this hotel (located in Saint Louis, MO). Write each restaurant's name and address, separated by a semicolon, and separate each entry with a new line. Please use standard abbreviations for addresses, e.g. St for Street or Dr for Drive.</label></p>
                    <p><label>For example, for a restaurant named MyEatery at 1234 Street Lane and a restaurant named MyRestaurant at 2345 Lane Street, enter:<br>MyEatery; 1234 Street Ln<br>MyRestaurant; 2345 Lane St</label></p>
                    <textarea name="workervote" id="responses" rows="4" cols="50" placeholder="MyEatery; 1234 Street Ln
                        MyRestaurant; 2345 Lane St"required></textarea>
                </table>

                <br />
                    <label>Feedback (optional):
                    <textarea name="feedback" row="4" cols="50"></textarea>
                <br />
                <br />
            </section>
            <!-- End Content Body -->
            
        </div>

        <input type="hidden" id="elapsed_time" name = "elapsed_time" value="555">

        <!-- include mturk values -->
        <input type="hidden" id="assignmentId" value="{{ assignmentId }}" name="assignmentId"/>
        <input type="hidden" id="workerId" value="{{ workerId }}" name="workerId"/>
        <input type="hidden" id="hitId" value="{{ hitId }}" name="hitId"/>

        <div style="text-align:center">
            <!-- once user submits answer, calls endTime() -->
            <input type="submit" id="submitButton" value="Submit" onclick='endTime()'>
        </div>
        <div style="display:block;color:blue" id="consentRequest">
            <p> Please confirm your consent (using the checkbox at the top) before submitting this HIT.</p>
        </div>

    </form>

    

</body>

<style type="text/css">fieldset { padding: 10px; background:#fbfbfb; border-radius:5px; margin-bottom:5px; }
</style>
</html>
<!-- YOUR HTML ENDS -->
]]>
